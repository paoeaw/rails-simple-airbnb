<div class="form py-4 border-bottom mb-4">
  <%= simple_form_for(@flat) do |f| %>

    <div class="form-group">
      <%= f.input :name %>
    </div>

    <div class="form-group">
      <%= f.input :address %>
    </div>

    <div class="form-group">
      <%= f.input :description %>
    </div>

    <div class="form-group">
      <%= f.input :number_of_guests %>
    </div>

    <div class="form-group">
      <%= f.input :price_per_night %>
    </div>

    <%= f.submit class: 'btn btn-info'%>
  <% end %>
</div>
